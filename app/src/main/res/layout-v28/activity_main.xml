<?xml version="1.0" encoding="utf-8"?>
<!-- 2017035107012 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ccc"
        android:gravity="center_vertical"
        android:text="@string/计算器" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/colorAccent"
        android:gravity="center_vertical|right"
        android:includeFontPadding="false"
        android:paddingRight="10dp"
        android:text="0"
        android:textSize="55dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_ac"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color"
            android:button="@null"
            android:gravity="center"
            android:text="AC"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent">

        </LinearLayout>

        <Button
            android:id="@+id/btn_m"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color"
            android:gravity="center"
            android:text="M+"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent">

        </LinearLayout>

        <Button
            android:id="@+id/btn_m-"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color"
            android:gravity="center"
            android:text="M-"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent">

        </LinearLayout>

        <Button
            android:id="@+id/btn_mr"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color"
            android:gravity="center"
            android:text="MR"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_c"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color"
            android:gravity="center"
            android:text="C"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent">

        </LinearLayout>

        <Button
            android:id="@+id/btn_zhengfu"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color"
            android:gravity="center"
            android:text="+/-"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent">

        </LinearLayout>

        <Button
            android:id="@+id/btn_multiply"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color"
            android:gravity="center"
            android:text="*"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent">

        </LinearLayout>

        <Button
            android:id="@+id/btn_divide"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color"
            android:gravity="center"
            android:text="/"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color"
            android:gravity="center"
            android:text="7"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent">

        </LinearLayout>

        <Button
            android:id="@+id/btn_8"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color"
            android:gravity="center"
            android:text="8"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent">

        </LinearLayout>

        <Button
            android:id="@+id/btn_9"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color"
            android:gravity="center"
            android:text="9"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent">

        </LinearLayout>

        <Button
            android:id="@+id/btn_minus"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color"
            android:gravity="center"
            android:text="-"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color"
            android:gravity="center"
            android:text="4"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent">

        </LinearLayout>

        <Button
            android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color"
            android:gravity="center"
            android:text="5"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent">

        </LinearLayout>

        <Button
            android:id="@+id/btn_6"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color"
            android:gravity="center"
            android:text="6"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent">

        </LinearLayout>

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color"
            android:gravity="center"
            android:text="+"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_color"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="5dp"
                    android:layout_height="match_parent">

                </LinearLayout>

                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_color"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="5dp"
                    android:layout_height="match_parent">

                </LinearLayout>

                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_color"
                    android:gravity="center"
                    android:text="3"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent">

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_0"
                    android:layout_width="7dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="2"
                    android:background="@drawable/btn_color"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="5dp"
                    android:layout_height="match_parent">

                </LinearLayout>

                <Button
                    android:id="@+id/btn_point"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_color"
                    android:gravity="center"
                    android:text="."
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent">

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_equal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/btn_color"
                android:gravity="center"
                android:text="="
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>